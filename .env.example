# Gemini AI Configuration
# Get your free API key from: https://aistudio.google.com/
# Replace YOUR_GEMINI_API_KEY_HERE with your actual API key
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# Optional: Database Configuration
# Default: upwork_projects.db (will be created automatically)
DATABASE_PATH=upwork_projects.db

# Optional: Chrome Driver Configuration  
# Default: auto (automatically downloads and manages ChromeDriver)
# You can also specify a custom path: /path/to/chromedriver
CHROME_DRIVER_PATH=auto

# Optional: Debug Mode
# Set to true to enable detailed logging
DEBUG=false

# Optional: Scraping Configuration
# Maximum pages to scrape per search (1-10, default: 2)
MAX_PAGES_DEFAULT=2

# Delay between requests in seconds (default: 1.5)
REQUEST_DELAY=1.5

# Browser timeout in seconds (default: 30)
BROWSER_TIMEOUT=30

# Optional: Application Configuration
# Application name for logs and UI
APP_NAME=Turtir-AI Upwork Assistant

# Port for Streamlit (default: 8501)
STREAMLIT_PORT=8501
